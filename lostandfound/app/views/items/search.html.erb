<div class="col-md-offset-1 col-md-4">
  <h1>Search</h1>
    <%= form_tag(result_items_path, method: "get", class: "form") do %>

      <div class="form-group">
        <label>Match both category AND title or EITHER</label>
        <%= select_tag(:and_or, 
              options_for_select(
              [['BOTH', "and"], 
               ['EITHER', "or"]
              ]), class: "form-control") %>
      </div>


      <div class="form-group">
        <label>Title</label>
        <%= text_field_tag(:title, "", class: "form-control") %>
      </div>
      
    <div class="form-group">
        <label>Category</label>
        <%= select_tag(:category, 
              options_for_select(
              [['Computer', "Computer"], 
               ['Phone', "Phone"], 
               ['Book', "Book"]
              ]), class: "form-control") %>
      </div>

      <%= submit_tag("Search", class: "btn btn-default") %>
    <% end %>
</div>

<%= link_to 'Back', items_path %>